<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewimg"
        android:layout_width="360dp"
        android:layout_height="261dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@color/BlackHeader"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="360dp"
        android:layout_height="43dp"
        android:layout_below="@+id/imageViewimg"
        android:layout_alignEnd="@+id/imageViewimg"
        android:layout_alignRight="@+id/imageViewimg"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/colorindigo1"
        android:hint="@string/emailhint"
        android:padding="7dp"
        android:textAlignment="center"
        android:textColor="@color/lightGray"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewHashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEmail"
        android:layout_alignEnd="@+id/textViewEmail"
        android:layout_alignRight="@+id/textViewEmail"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/BlackHeader"
        android:padding="7dp"
        android:text="@string/HashTag"
        android:textAlignment="center"
        android:textColor="@color/colorText"
        android:textSize="18sp" />
</RelativeLayout>